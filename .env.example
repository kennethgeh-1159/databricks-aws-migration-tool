# =============================================================================
# Databricks AWS Migration Tool - Environment Configuration
# =============================================================================

# Databricks Configuration
# -------------------------
# Your Databricks workspace URL (without https://)
DATABRICKS_WORKSPACE_URL=YOUR-DATABRICKS-WORKSPACE-URL

# Databricks Personal Access Token
# Generate from: User Settings > Access Tokens
DATABRICKS_ACCESS_TOKEN=YOUR-DATABRICKS-ACCESS-TOKEN

# AWS Configuration
# -----------------
# AWS Region for services
AWS_REGION=us-east-1

# S3 bucket for migration data storage
S3_BUCKET_NAME=your-migration-bucket

# AWS Credentials (optional if using IAM roles)
# AWS_ACCESS_KEY_ID=EXAMPLEACCESSKEYID
# AWS_SECRET_ACCESS_KEY=EXAMPLESECRETACCESSKEY

# Bedrock Configuration
# ---------------------
# Bedrock model for code analysis
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Application Configuration
# -------------------------
# Application environment
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum number of notebooks to analyze
MAX_NOTEBOOKS_TO_ANALYZE=10

# Maximum number of tables to migrate
MAX_TABLES_TO_MIGRATE=5

# Database Configuration (if using local database)
# ------------------------------------------------
# DATABASE_URL=sqlite:///./migration_tool.db

# Security Configuration
# -----------------------
# Secret key for session management
SECRET_KEY=your-secret-key-here

# API Configuration
# -----------------
# API rate limiting
API_RATE_LIMIT=100

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Monitoring and Logging
# ----------------------
# Enable CloudWatch logging
ENABLE_CLOUDWATCH_LOGGING=false

# CloudWatch log group
CLOUDWATCH_LOG_GROUP=/aws/lambda/databricks-migration-tool

# Performance Configuration
# -------------------------
# Number of worker threads
WORKER_THREADS=4

# Batch size for processing
BATCH_SIZE=100

# Cache TTL in seconds
CACHE_TTL=3600
